<?xml version="1.0" encoding="UTF-8"?>

<phpunit
        backupGlobals="false"
        backupStaticAttributes="false"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        processIsolation="false"
        stopOnFailure="false"
        syntaxCheck="false"
        bootstrap="./Tests/Functional/autoload.php"
>
    <php>
        <server name="KERNEL_DIR" value="Tests/Functional/app" />
    </php>

    <testsuites>
        <testsuite name="IDCIDocumentManagementBundle functional test suite">
            <directory suffix="Test.php">./Tests/Functional</directory>
            <exclude>./Tests/Functional/DocumentManagementWebTestCase</exclude>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
                <directory>./Resources</directory>
                <directory>./Tests</directory>
                <directory>./vendor</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
