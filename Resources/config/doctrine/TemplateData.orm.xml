<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="IDCI\Bundle\DocumentManagementBundle\Model\TemplateData" table="template_data">

        <indexes>
            <index name="reference" columns="reference" />
        </indexes>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="data" column="data" type="json" />
        <field name="reference" column="reference" type="string" />
        <field name="createdAt" column="created_at" type="datetime" />
        <field name="updatedAt" column="updated_at" type="datetime" />

        <many-to-one field="template" target-entity="Template" inversed-by="templateData">
            <join-column name="template_id" referenced-column-name="id" />
        </many-to-one>
    </entity>

</doctrine-mapping>
